default menu.c32
prompt 0

menu title PXE Boot Menu
#MENU AUTOBOOT Starting Local System in # seconds

label local
  menu label Boot from local disk
  localboot 0x80
  timeout 600

# ubuntu debugging tips
#
# append break=mount debug=y
# when this drops you to busybox run
# t=/dev/tty2; sh <$t >$t 2>$t &
# then run exit
# now the install continues but you have a shell on the second vt
#
# for live cd
# automatic-ubiquity debug-ubiquity
#
# for alternate installer
# DEBCONF_DEBUG=5

#label install-1004
#  menu label Auto install Ubuntu 10.04.1
#  kernel 10.04.1/casper/vmlinuz
## change "noscrub.seed" to "scrub.seed" to use a preseed file with scrubbing
## add "noninteractive" to install on low ram
#  append  boot=casper netboot=nfs initrd=10.04.1/casper/initrd.lz nfsroot=192.168.1.1:/var/lib/tftpboot/10.04.1 automatic-ubiquity debug-ubiquity noprompt file=/cdrom/preseed/noscrub.seed

label live-u10043
  menu label Run Ubuntu 10.04.3
  menu default
  kernel u-10.04.3/casper/vmlinuz
  append boot=casper netboot=nfs initrd=u-10.04.3/casper/initrd.lz nfsroot=192.168.1.1:/var/lib/tftpboot/u-10.04.3 file=/cdrom/preseed/ubuntu.seed

label clonezilla
  menu label Clonezilla live
  kernel clonezilla/vmlinuz
  append initrd=clonezilla/initrd.img boot=live config noswap nolocales edd=on nomodeset ocs_live_run="ocs-live-general" ocs_live_extra_param="" ocs_live_keymap="" ocs_live_batch="no" ocs_lang="" vga=788 nosplash fetch=tftp://192.168.1.1/clonezilla/filesystem.squashfs

# symlinks set up to shorten path, fails to work otherwise
label clonezilla-live-ubuntu
  menu label Install Mint13 With Clonezilla
  kernel c/v
  append initrd=c/i boot=live live-config noswap nolocales edd=on nomodeset ocs_prerun="/sbin/dhclient -v" ocs_prerun1="sleep 30" ocs_prerun2="mount -t nfs server:/home /home" ocs_prerun3="/home/frita/freeitathenscode/pxe/partition.sh" ocs_live_extra_param="" ocs_live_run="/opt/drbl/sbin/ocs-sr -g auto -e1 auto -e2 -j2 -k -r -p true restoredisk latest-ubuntu sda" ocs_live_keymap="NONE" ocs_live_batch="yes" ocs_lang="en_US.UTF-8" vga=788 nosplash fetch=tftp://192.168.1.1/c/f.squashfs

# Following from http://www.dslreports.com/forum/r24834879-How-To-PXE-Boot-DBAN
label DBAN_2
  menu label DBAN version 2
  kernel dban2/dban.bzi
  append initrd dban2/dban.bzi root=/dev/ram0 init=rc nuke="dwipe"

label dban
  menu label Wipe hard drive (Old DBAN)
  kernel memdisk
  append initrd=dban/dban.img floppy

LABEL memtest
  menu label Test RAM
  kernel memtest/memtestp
  append -

label hdt
  menu label Identify Hardware
  kernel memdisk
  append initrd=hdt/hdt.img floppy

label live-u1204
  menu label Run Ubuntu 12.04
  kernel u-12.04/casper/vmlinuz
  append boot=casper netboot=nfs initrd=u-12.04/casper/initrd.lz nfsroot=192.168.1.1:/var/lib/tftpboot/u-12.04 file=/cdrom/preseed/ubuntu.seed

